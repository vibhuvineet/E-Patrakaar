<resources>
    <!-- Base application theme. -->
    <style name="Theme.EPatrakaar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@font/el_messiri_semibold</item>
        <item name="android:fontFamily">@font/libre_franklin</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/el_messiri_semibold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/libre_franklin</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>